<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/integral_item_up_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dip">

        <TextView
            android:id="@+id/integral_item_id"
            android:layout_width="72dip"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="1"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/integral_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/integral_item_id"
            android:gravity="center"
            android:text="张三"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/integral_item_level"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="普通" />

        <TextView
            android:id="@+id/integral_item_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@id/integral_item_level"
            android:gravity="right|center_vertical"
            android:text="10000"
            android:textColor="#444444" />

    </RelativeLayout>

    <View
        android:id="@+id/integral_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/integral_item_up_layout"
        android:layout_marginTop="10dip"
        android:background="#44444444" />

</RelativeLayout>